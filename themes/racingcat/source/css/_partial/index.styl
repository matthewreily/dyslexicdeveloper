/*! archive layout */
.category-icon:before,.tag-icon:before,.archive-icon:before
  font-family font-icon-family
  font-smoothing()
  color color-title
  // color color-brown
  font-size font-size
  padding-right 0.3em

.category-icon:before
  content "\f07b"

.tag-icon:before
  content "\f02c"

.archive-icon:before
  // content "\f187"
  content "\f02e"
  // padding-left 3px
  padding-right: 5px;

.archive-list-count
    color color-title
.archive-list-link, .archive-list-count
    font-family font-time
    font-size 1.5em

.archive-title
  margin 1em 0
  width 97%
  padding 2em 0 2em 3%
  @media tablet
    margin 2em 0
    width 18.5%
    padding-left 0.5%
    float left
  background color-section
  border-left 0.5em solid color-pink
  h2
    font-family font-time
    width 90%
    color color-blue
    font-size font-size+60
  a
    color color-blue
    transition color .5s
    &:hover
      color color-theme
      transition color .5s
.current
