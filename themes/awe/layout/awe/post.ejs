<%
  thumb_img = '';

  if (typeof post.photos !== 'undefined' && post.photos.length > 0) {
    thumb_img = post.photos[0];
  }

  post_link = config.root + post.path;
%>
<div class="two-columns post-page">
  <div class="content">
<% if (thumb_img) { %>
    <div class="post box">
      <div class="coverimg imgLiquid">
        <img src="<%- thumb_img %>">
        <em class="date"><span><%= post.date.format("DD") %></span><%= post.date.format("MMM") %></em>
        <h2 class="post-title"><a href="<%- post_link %>"><%- post.title %></a></h2>
      </div>
      <div class="post-content"><%- post.content %></div>
<% } else { %>
    <div class="post box nocover">
      <em class="date"><span><%= post.date.format("DD") %></span><%= post.date.format("MMM") %></em>
      <h2 class="post-title"><a href="<%- post_link %>"><%- post.title %></a></h2>
      <div class="post-content"><%- post.content %></div>
<% } %>
      <div class="bottom-panel">
        <ul class="social-likes" data-url="<%- post_link %>">
          <li class="facebook" title="like"></li>
          <li class="twitter" title="twitte"></li>
          <li class="plusone" title="google"></li>
        </ul>
      </div>
    </div>
    <% if (page.comments && config.disqus_shortname) { %>
    <div class="widget post-comment">
      <h2 class="title">Comments</h2>
      <section id="comments">
        <div id="disqus_thread">
          <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
        </div>
      </session>
    </div>
    <% } %>
  </div>

  <div class="widgetarea">

    <% if (theme.tag) { %>
    <%- partial('tag', {tags: post.tags, order: 1}) %>
    <% } %>

    <% theme.widgets.forEach(function(widget){ %>
      <%- partial('../widget/' + widget) %>
    <% }); %>

  </div>
</div>
